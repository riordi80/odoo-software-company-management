<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="module_category_gestion_software" model="ir.module.category">
            <field name="name">Gestión de Software</field>
            <field name="description">Roles para gestión de empresa de desarrollo de software</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_programador" model="res.groups">
            <field name="name">Programador</field>
            <field name="category_id" ref="module_category_gestion_software"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Pueden modificar las tareas. No pueden crearlas ni eliminarlas.</field>
        </record>

        <record id="group_analista" model="res.groups">
            <field name="name">Analista</field>
            <field name="category_id" ref="module_category_gestion_software"/>
            <field name="implied_ids" eval="[(4, ref('group_programador'))]"/>
            <field name="comment">Sólo consultan empresas y proyectos. Crean tareas y las asignan.</field>
        </record>

        <record id="group_jefe_proyectos" model="res.groups">
            <field name="name">Jefe de Proyectos</field>
            <field name="category_id" ref="module_category_gestion_software"/>
            <field name="implied_ids" eval="[(4, ref('group_analista')), (4, ref('project.group_project_manager'))]"/>
            <field name="comment">Crean empresas, proyectos y tareas. CRUD total.</field>
        </record>

        <record id="group_administrador" model="res.groups">
            <field name="name">Administrador Gestión Software</field>
            <field name="category_id" ref="module_category_gestion_software"/>
            <field name="implied_ids" eval="[(4, ref('group_jefe_proyectos')), (4, ref('base.group_erp_manager'))]"/>
            <field name="comment">Solo ajustes y parametrización.</field>
        </record>

    </data>
</odoo>
