<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_subtarea_tree" model="ir.ui.view">
            <field name="name">gestion_software.subtarea.tree</field>
            <field name="model">gestion_software.subtarea</field>
            <field name="arch" type="xml">
                <tree string="Subtareas" decoration-info="state == 'en_proceso'" decoration-success="state == 'completada'" decoration-danger="state == 'bloqueada'" editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="task_id"/>
                    <field name="user_id" widget="many2one_avatar_user"/>
                    <field name="priority" widget="priority"/>
                    <field name="state" widget="selection"/>
                </tree>
            </field>
        </record>

        <record id="view_subtarea_kanban" model="ir.ui.view">
            <field name="name">gestion_software.subtarea.kanban</field>
            <field name="model">gestion_software.subtarea</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" quick_create="false">
                    <field name="name"/>
                    <field name="priority"/>
                    <field name="user_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click shadow-sm border-left-4">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="task_id"/>
                                    </div>
                                    <div class="oe_kanban_bottom_left mt4">
                                        <field name="priority" widget="priority"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_subtarea_form" model="ir.ui.view">
            <field name="name">gestion_software.subtarea.form</field>
            <field name="model">gestion_software.subtarea</field>
            <field name="arch" type="xml">
                <form string="Subtarea">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="pendiente,en_proceso,completada" clickable="True"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Nombre de la Subtarea"/>
                            <h1><field name="name" placeholder="Ej: Implementar login..."/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="task_id" options="{'no_create': True, 'no_open': False}"/>
                                <field name="user_id" string="Programador Asignado"/>
                            </group>
                            <group>
                                <field name="priority" widget="priority"/>
                                <field name="sequence" groups="base.group_no_one"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="DescripciÃ³n" name="description">
                                <field name="description" placeholder="Instrucciones detalladas para el programador..."/>
                            </page>
                            <page string="Notas y Fechas" name="extra_info">
                                <group>
                                    <group>
                                        <field name="date_start"/>
                                        <field name="date_end"/>
                                    </group>
                                    <group>
                                        <field name="date_deadline"/>
                                        <field name="active" groups="base.group_no_one"/>
                                    </group>
                                </group>
                                <field name="notas" placeholder="Observaciones adicionales..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_subtarea" model="ir.actions.act_window">
            <field name="name">Subtareas de Desarrollo</field>
            <field name="res_model">gestion_software.subtarea</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea la primera subtarea para tus programadores.
                </p>
            </field>
        </record>

    </data>
</odoo>
