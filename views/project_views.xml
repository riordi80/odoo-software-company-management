<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_project_form_inherit" model="ir.ui.view">
            <field name="name">project.project.form.inherit.gestion_software</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="empresa_contratadora_id" options="{'no_create': False, 'no_open': False}"/>
                    <field name="fecha_contratacion"/>
                    <field name="presupuesto" widget="monetary"/>
                </xpath>
            </field>
        </record>

        <record id="view_project_tree_inherit" model="ir.ui.view">
            <field name="name">project.project.tree.inherit.gestion_software</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="empresa_contratadora_id"/>
                </xpath>
            </field>
        </record>

        <record id="view_task_form_inherit" model="ir.ui.view">
            <field name="name">project.task.form.inherit.gestion_software</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_subtareas"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-list-ul">
                        <field name="subtarea_count" widget="statinfo" string="Subtareas"/>
                    </button>
                </xpath>

                <xpath expr="//notebook" position="inside">
                    <page string="Subtareas (Desarrollo)" name="subtareas_desarrollo">
                        <field name="subtarea_ids">
                            <tree string="Subtareas" editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="name"/>
                                <field name="user_id" string="Programador"/>
                                <field name="state"/>
                                <field name="priority" widget="priority"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_task_tree_inherit" model="ir.ui.view">
            <field name="name">project.task.tree.inherit.gestion_software</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_ids']" position="after">
                    <field name="subtarea_count" string="Subtareas"/>
                </xpath>
            </field>
        </record>

        <record id="view_task_kanban_inherit" model="ir.ui.view">
            <field name="name">project.task.kanban.inherit.gestion_software</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_kanban_bottom_right')]" position="before">
                    <div class="oe_kanban_bottom_left">
                        <i class="fa fa-list-ul" title="Subtareas" role="img" aria-label="Subtareas"/>
                        <field name="subtarea_count"/>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
